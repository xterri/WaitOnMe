<?xml version="1.0" encoding="utf-8"?>

<!-- Draws a "+" button -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
	android:width="56dp"
	android:height="56dp"
	>
	<item
		android:gravity="center"
		android:top="0dp"
		android:bottom="0dp"
		android:left="0dp"
		android:right="0dp"
		>
		<shape android:shape="oval">
			<size
				android:width="56dp"
				android:height="56dp"
				/>

			<solid
				android:color="@color/colorAccent"
				/>
		</shape>
	</item>	

	<item
		android:gravity="center"
		android:top="26dp"
		android:bottom="26dp"
		android:left="18dp"
		android:right="18dp"
		>
		<shape android:shape="rectangle">
			<size
				android:width="20dp"
				android:height="4dp"
				/>

			<solid
				android:color="@color/white"
				/>
		</shape>	
	</item>	

	<item
		android:gravity="center"
		android:top="18dp"
		android:bottom="18dp"
		android:left="26dp"
		android:right="26dp"
		>
		<shape android:shape="rectangle">
			<size
				android:width="4dp"
				android:height="20dp"
				/>

			<solid
				android:color="@color/white"
				/>
		</shape>	
	</item>	
</layer-list>
